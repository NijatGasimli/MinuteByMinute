                            </ul>
                        </div>
                    </div>

                    <div class="col-md-4 Auth">
                        <div class="d-flex mt-2 All justify-content-center  ">
                            @if (User.Identity.IsAuthenticated)
                            {

                               @User.Identity.Name
                                <a asp-controller="Account" asp-action="Logout">Logout</a>
                                            }
