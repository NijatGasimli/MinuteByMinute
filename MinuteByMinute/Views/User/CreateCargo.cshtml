@model CargoVM
@{
    ViewData["Title"] = "Register";
}
<div class="container mt-5">
    <div class="row">
        
        <form method="post" asp-controller="User" asp-action="CreateCargo">
            <div class="row">

                <div class="col">
                    <input class="form-control"  asp-for="Link" placeholder="Mehsulun Linki">

                </div>
                <span class="text-danger" asp-validation-for="Link"></span>
            </div>
            <div class="row mt-3">
                <div class="col d-flex">


                    <input class="form-control" asp-for="Size" placeholder="Olcu" >
                    <span class="text-danger"  asp-validation-for="Size"></span>
                </div>
                <div class="col d-flex">

                    <input class="form-control" placeholder="Say" asp-for="Count" >
                    <span class="text-danger "  asp-validation-for="Count"></span>
                </div>
                <div class="col">
                    <input class="form-control" asp-for="Price" placeholder="Qiymet" >
                    <span class="text-danger "  asp-validation-for="Price"></span>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col ">


                    <div class="form-group">
                        <span class="text-danger " asp-validation-for="About"></span>
                        <textarea class="form-control" placeholder="Haqqinda"  asp-for="About" id="exampleFormControlTextarea1" rows="3"></textarea>
                    </div>

                </div>
            <div class="row mt-3">
                <div class="col-md-12">
                    <div class="d-flex justify-content-center"><button class="btn btn-outline-warning">Yadda saxla</button></div>

                </div>

            </div>
        </form>
    </div>
</div>
