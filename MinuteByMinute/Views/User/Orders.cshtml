@model List<Cargos>



@{
    ViewData["Title"] = "Orders";
}




<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/assets/css/style.css" />
    <title>Document</title>
</head>
<body>
    <section id="User">
        <div class="container-fluid mt-3">
            <div class="row">
                <div class="col-md-12">
                    <div class="d-flex about justify-content-between align-item-center ">
                        <h1 class="">Sifarişlər</h1>
                        <p class="mt-5 mr-5"><a href="#">Ana Sehife</a>/Sifarişlər</p>
                    </div>
                </div>

            </div>
            <div class="container">
                <div class="row mt-4 BalanceAbout">
                    <div class="col-md-6">
                        <div class="d-flex ml-5">
                            <div>
                                <p class="text-muted">Balans</p>
                                <h3>0 TL</h3>
                                <button type="button" class="btn btn-primary">Balans Artir</button>
                            </div>
                            <div class="mt-4 balance">
                                <p></p>
                                <h3>0 AZN</h3>
                                <button type="button" class="btn btn-primary">Balans Artir</button>
                            </div>
                        </div>
                    </div>


                    <div class="col-md-6">
                        <div class="d-flex mt-5 justify-content-center">
                            <button class="mybutton">
                                Sifaris Et
                            </button>
                            <button class="mybutton">
                                Faktura yüklə
                            </button>
                        </div>
                    </div>
                </div>
                <div class="row mt-3 UserNavbar">
                    <div class="col-md-12">
                        <ul class="d-flex Userbar justify-content-evenly mt-2">
                            <li><a asp-action="Index">Şəxsi məlumatlar</a></li>
                            <li><a href="">Xaricdəki ünvanlarım</a></li>
                            <li><a asp-action="Orders">Sifarişlər</a></li>
                            <li><a href="">Bağlamalar</a></li>
                            <li><a href="">İsmarıclar</a></li>
                            <li><a href="">Daşınma ödənişi</a></li>
                            <li><a href="">Kuryer Sifarişi</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-lg-12 grid-margin stretch-card mt-5">
                <div class="card">
                    <div class="card-body">
                       

                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>

                                        <th>
                                            OrderCode
                                        </th>
                                        <th>
                                            Link
                                        </th>
                                        <th>
                                            Count
                                        </th>
                                        <th>
                                            Size
                                        </th>
                                        <th>
                                            About
                                        </th>
                                        <th>
                                            Price
                                        </th>
                                        <th>
                                            Status
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                RUN @item.Id
                                            </td>
                                            <td class="py-1">
                                                <a href="@item.Link">Your Link</a>
                                            </td>
                                            <td>
                                                @item.Count

                                            </td>
                                            <td>
                                                @item.Size
                                            </td>
                                            <td>
                                                @item.Count
                                            </td>
                                            <td>
                                                @item.Price

                                            </td>
                                            <td>
                                                <p class="text-danger">@item.Status</p>
                                            </td>
                                           <td><a asp-action="DecleredCargos" asp-route-id="@item.Id">Karogunu beyan Et</a></td>
                                        </tr>

                                    }


                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

    </section>



    <script src="https://kit.fontawesome.com/d9fd6f15f2.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-fQybjgWLrvvRgtW6bFlB7jaZrFsaBXjsOMm/tB9LTS58ONXgqbR9W8oWht/amnpF" crossorigin="anonymous"></script>
    <script src="/assets/js/script.js"></script>
</body>
</html>

